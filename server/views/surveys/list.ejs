
    <%- include ../partials/portfolio_header.ejs %>
    <%- include ../partials/nav_main.ejs %>


    <!-- Main Content -->
    <main class="container content-container">
        <div class="row">
            <div class="col-md-offset-3 col-md-8">
                <table class="table table-borderless">
                    <tr>
                        <td class="text-left col-1">
                            <h1><%=title %></h1>
                        </td>
                        <td>
                            <a href="/surveys/" class="btn btn-primary" style="margin-top:7px;" role="button">
                            <i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Create new</a>
                        </td>
                    </tr>
                </table>
                
                <table class="table table-hover">
                    <!-- Header Row-->
                    <tr class="d-flex">
                        <th class="text-center col-7">Survey Name</th>
                        <th class="text-center col-4">Category</th>
                        <th class="text-center col-1">&nbsp;&nbsp;&nbsp;&nbsp;</th>
                        <th class="text-center col-1">&nbsp;&nbsp;&nbsp;&nbsp;</th>
                    </tr>
    
                    <% for(let count = 0; count < surveyList.length; count++) { %>
                        <tr class="d-flex">
                            <td class="text-center col-7"><%= surveyList[count].name %></td>
                            <td class="text-center col-4"><%= surveyList[count].category %></td>
                            <td class="text-center col-1"><a href="/surveys/" class="btn btn-primary btn-sm"><i class="far fa-edit"></i></a></td>
                            <td class="text-center col-1"><a href="/surveys/" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i></a></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </main>
      
    <%- include ../partials/nav_bottom.ejs %>
    <%- include ../partials/portfolio_footer.ejs %>